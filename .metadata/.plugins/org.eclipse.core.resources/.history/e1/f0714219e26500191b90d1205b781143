package 小测试;

import java.awt.BorderLayout;
import java.awt.CardLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

public class Question1  /*extends JFrame*/ implements ActionListener{
	//extends继承      JFrame带有标题和边框的顶层窗口
	JFrame jf1;//定义总面板
	CardLayout cardLayout;//（改动追加）定义卡片布局
	//第一张卡片的设定类
	
	JPanel bf3;//（改动追加）第一张卡片总面板容器
	JLabel bq1;
	JPanel bf2;//（改动追加）第一张面板按钮容器
	JButton hd1,hd2;
	//第二张卡片的设定类
	JPanel bf4;//（改动追加）第二张卡片容器
	JLabel bq2;
	JButton jb1;
	
	//第三张卡片
	JPanel bf5;
	JLabel bq3;
	JButton jb2;
	
		public   Question1(){
			
			jf1=new JFrame();//（改动追加）创建总面板
			
			//第一张卡片                    //将老师教程中的this改为jf1是否合适？
			bf3=new JPanel(new BorderLayout());//创建第一张卡片总面板容器
			bf2=new JPanel(new GridLayout(1,2));//布局一行两块
			bq1=new JLabel(new ImageIcon("图包/你觉得我是什么人.PNG"));
			hd1=new JButton("你是个好人");
			hd1.addActionListener(this);//这个this指代hd1(不可替换，没有那种构造)
			hd2=new JButton("你是个坏人");
			hd2.addActionListener(this);//这个this指代hd2（同上）
			
			bf2.add(hd1);bf2.add(hd2);
			//将组建加入第一张卡片总面板容器中（改动追加）
			bf3.add(bq1,"North");
			bf3.add(bf2,"South");

			//第二张卡片
			bf4=new JPanel(new BorderLayout());//创建第二张卡片容器
			bq2=new JLabel("(*^^*)，谢谢啦！");
			jb1=new JButton("重新选择");
			bf4.add(jb1,"South");
			jb1.addActionListener(this);
			bf4.add(bq2,"Center");
			
			//第三张卡片
			bf5=new JPanel(new BorderLayout());
			bq3=new JLabel("你才是坏人！！！！");
			jb2=new JButton("重新选择");
			jb2.addActionListener(this);
			bf5.add(bq3);
			bf5.add(jb2,"South");
			
			
			
			
			//设立添加两张卡片          //这一块问题出在哪？
			cardLayout=new CardLayout();//卡片布局
			
			jf1.setLayout(cardLayout);
			jf1.add(bf3,"1");//将第一张卡片总容器加入面板，并命名为“1”
			jf1.add(bf4,"2");
			jf1.add(bf5,"3");
			
			jf1.setSize(350,300);
			jf1.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
			jf1.setLocationRelativeTo(null);//设位置为与其他窗口无关（默认显示为在屏幕中央）
			jf1.setVisible(true);
		}
		public static void main(String[] args) {	
			Question1 Question1=new Question1();	
	}	
		@Override
		public void actionPerformed(ActionEvent e) {//响应事件方法
			if(e.getSource()==hd1){
				cardLayout.show(jf1.getContentPane(), "2");
			}//getContentPane获得窗体的内部窗格
			if(e.getSource()==hd2){
				cardLayout.show(jf1.getContentPane(), "3");
			}
			if(e.getSource()==jb1||e.getSource()==jb2){
				cardLayout.show(jf1.getContentPane(), "1");
			}
		}
}
