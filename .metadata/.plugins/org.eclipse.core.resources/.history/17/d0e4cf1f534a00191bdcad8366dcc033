package Serverwod.view;

import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.ServerSocket;
import java.net.Socket;

import caht.model.Massage;
import caht.model.User;

public class Server {
	
	ServerSocket ss;
	Socket s;
	public Server(){
		
	try {
		
		ss=new ServerSocket(3456);
		System.out.println("服务器已启动，正在监听3456端口......");
		while(true){
		s=ss.accept();
		System.out.println(s);
		
		ObjectInputStream ois;
		
		ois=new ObjectInputStream(s.getInputStream());
		User user=(User)ois.readObject();
		System.out.println(user.getUserName());
		System.out.println(user.getPassword());
		Massage massage=new Massage();
		
		if(user.getPassword().equals("249043")){
			massage.setSender("server");
			massage.setReceiver(user.getPassword());
			massage.setMassageTap("1");
			
		}else{
			massage.setSender("server");
			massage.setReceiver(user.getPassword());
			massage.setMassageTap("0");
		}
		ObjectOutputStream oos=new ObjectOutputStream(s.getOutputStream());
		oos.writeObject(massage);
		}
		
	} catch (IOException | ClassNotFoundException e) {
		e.printStackTrace();
	}
	
	}

	public static void main(String[] args) {
		
	}

}
