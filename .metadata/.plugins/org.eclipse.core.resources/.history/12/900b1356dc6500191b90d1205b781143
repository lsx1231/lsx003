package 小测试;

import java.awt.BorderLayout;
import java.awt.CardLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

public class Question1  extends JFrame implements ActionListener{
	//extends继承      JFrame带有标题和边框的顶层窗口
	//第一张卡片的设定类
	JFrame jf1;
	JLabel bq1;
	JPanel bf2;
	JButton hd1,hd2;
	//第二张卡片的设定类
	CardLayout cardLayout;
	
		public   Question1(){
			//第一张卡片                    //将老师教程中的this改为jf1是否合适？
			jf1=new JFrame();
			bq1=new JLabel(new ImageIcon("图包/你觉得我是什么人.PNG"));
			hd1=new JButton("你是个好人");
			//hd1.addActionListener(this);//这个this指代hd1(不可替换，没有那种构造)
			hd2=new JButton("你是个坏人");
			//hd2.addActionListener(this);//这个this指代hd2（同上）
			bf2=new JPanel(new GridLayout(1,2));//布局一行两块
			bf2.add(hd1);bf2.add(hd2);
			jf1.add(bq1,"North");
			jf1.add(bf2,"South");

			//第二张卡片
			
			//设立添加两张卡片          //这一块问题出在哪？
			cardLayout=new CardLayout();//卡片布局
			jf1.setLayout(cardLayout);
			jf1.add(hd1,"1");
			jf1.add(hd2,"2");
			
			jf1.setSize(350,250);
			jf1.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
			jf1.setLocationRelativeTo(null);//设位置为与其他窗口无关（默认显示为在屏幕中央）
			jf1.setVisible(true);
		}
		public static void main(String[] args) {	
			Question1 Question1=new Question1();	
	}	
		@Override
		public void actionPerformed(ActionEvent e) {//响应事件方法
		/*	if(e.getSource()==hd1){
				cardLayout.show(jf1.getContentPane(), "1");
			}//getContentPane获得窗体的内部窗格
			if(e.getSource()==hd2){
				cardLayout.show(jf1.getContentPane(), "2");
			}*/
		}
}
