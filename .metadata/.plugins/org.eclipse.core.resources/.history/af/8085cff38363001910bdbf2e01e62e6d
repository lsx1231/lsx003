package yychat.com.chatview;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.*;

public class FriendList extends JFrame{
	
	JPanel jp1,jp2,jp3;
	JButton jb1,jb2,jb3;
	JScrollPane jsl;
	public static final int number=51;
	JLabel[] friendname=new JLabel[number];
	
	public FriendList(){
		
	
		jp1=new JPanel(new BorderLayout());
		jp2=new JPanel();jp3=new JPanel(new GridLayout(2,1));
		jb1=new JButton("我的好友");jb2=new JButton("我的陌生人");jb3=new JButton("我的黑名单");
		//jp2.add();jp2.add();
		jsl=new JScrollPane();
		jp1.add(jb1,"North");
		jp3.add(jb2);jp3.add(jb2);
		jp1.add(jp3,"South");
		
		
        this.add(jp1);
		
		this.setSize(200,600);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setTitle("");
		this.setVisible(true);
		this.setLocationRelativeTo(null);
		
		
	}

	public static void main(String[] args) {
		new FriendList();

	}

}
