import java.sql.Connection;

import javax.swing.*;

import chat.model.Message;
import chat.model.User;
import yychat.connect.ConnectPort;

public class LoginInterface extends JFrame implements ActionListener{
	
	
	private static final String user = null;
	JPanel jp1;//整个面板的容器
	//北部组件
	JLabel jl1;
	
	//中部组件
	JTabbedPane jt1;
	JPanel jp3,jp4,jp5;
	JLabel la1,la2,la3,la4;
	JButton jb4;
	JCheckBox jcb1,jcb2;
	JTextField jtf;
	JPasswordField jpf;
	
	//南部组件
	JPanel jp2;
	JButton jb1,jb2,jb3;
	JLabel jl2,jl3,jl4;
	
	public LoginInterface(){
		
		//北部创建
		jp1=new JPanel(new BorderLayout());
		jl1=new JLabel(new ImageIcon("Images/tou.gif"));
		jp1.add(jl1,"North");
		
		//中部创建
		jt1=new JTabbedPane();
		jp3=new JPanel(new GridLayout(3, 3));jp4=new JPanel();jp5=new JPanel();
		la1=new JLabel("yy号码",JLabel.CENTER);la2=new JLabel("yy密码",JLabel.CENTER);
		la3=new JLabel("忘记密码",JLabel.CENTER);la4=new JLabel("申请密码保护",JLabel.CENTER);
		la3.setForeground(Color.BLUE);
		jb4=new JButton(new ImageIcon("Images/clear.gif"));
		jcb1=new JCheckBox("隐身登录");jcb2=new JCheckBox("记住密码");
		jtf=new JTextField();
		jpf=new JPasswordField(16);
		jp3.add(la1);jp3.add(jtf);jp3.add(jb4);
		jp3.add(la2);jp3.add(jpf);jp3.add(la3);
		jp3.add(jcb1);jp3.add(jcb2);jp3.add(la4);
		jt1.add("yy号码",jp3);jt1.add("手机号码",jp4);jt1.add("电子邮箱",jp5);
		jp1.add(jt1);
		
		//南部创建
		jp2=new JPanel(new GridLayout(1,3));
